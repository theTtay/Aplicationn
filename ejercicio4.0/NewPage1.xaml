<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ejercicio4._0.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout Padding="20" Spacing="15">
        
        <Label Text="Horas trabajadas:" FontSize="18"/>
        <Entry x:Name="entryHoras" Placeholder="Ingrese las horas" Keyboard="Numeric"/>

        <Label Text="Pago por hora:" FontSize="18"/>
        <Entry x:Name="entryPagoHora" Placeholder="Ingrese el pago por hora" Keyboard="Numeric"/>

        <Button Text="Calcular Sueldo" Clicked="Button_Clicked" />

        <Label x:Name="lblResultado" FontSize="20" TextColor="White" FontAttributes="Bold"/>

    </VerticalStackLayout>
</ContentPage>