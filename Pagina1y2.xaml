<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicationn.Pagina1y2"
             Title="Pagina1y2">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A148C" Offset="0.0" />
            <GradientStop Color="#8A2BE2" Offset="0.5" />
            <GradientStop Color="#FFB6C1" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout 
         VerticalOptions="Center" 
         HorizontalOptions="Center"
         Spacing="20">

        <Label Text="Cuenta regresiva de 10 - 1"
            TextColor="Black"
            FontSize="45" />

        <Label x:Name="lblCountdown"
            Text="10"
            FontSize="100"
            FontAttributes="Bold"
            TextColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <Button x:Name="btnStart"
             Text="Iniciar Cuenta Regresiva"
             TextColor="White"
             BackgroundColor="#4A148C"
             CornerRadius="25"
             WidthRequest="250"
             Clicked="btnStart_Clicked"/>

    </VerticalStackLayout>
</ContentPage>