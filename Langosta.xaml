<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercise5.Langosta">

    <ScrollView>
        <VerticalStackLayout>
            
            <Label Text="La Langosta Ahumada" TextColor="Black"
                   FontSize="25" FontAttributes="Italic" HorizontalTextAlignment="Start" FontFamily="Empty"
                   Margin="0,20">
            </Label>

            <BoxView HeightRequest="10" Color="Transparent"/>

            <Label Text="¿Que desea pedir el día de hoy?" TextColor="Black"
                   FontSize="17" FontAttributes="Bold" HorizontalTextAlignment="Center"
                   Margin="0,20"/>

            <BoxView HeightRequest="3" WidthRequest="960"  Color="Black"/>

            <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10" Margin="0,20">
                    <Image Source="langosta1.jpg"
                           WidthRequest="250"
                           HeightRequest="250"
                           Aspect="AspectFill"/>

                    <Label Text="Platillo de 1 persona"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <ImageButton Source="carrito.png" WidthRequest="90"
                                 HeightRequest="30" BackgroundColor="#89AC76" CornerRadius="5"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="ImageButton_Clicked"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10" Margin="0,20">
                    <Image Source="langosta2.jpg"
                           WidthRequest="250"
                           HeightRequest="250"
                           Aspect="AspectFill"/>

                    <Label Text="Platillo para más de 100 personas "
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <ImageButton Source="carrito.png" WidthRequest="90"
                                 HeightRequest="30" BackgroundColor="#89AC76" CornerRadius="10"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Clicked="ImageButton_Clicked_1"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <BoxView HeightRequest="28" Color="Transparent"/>

            <Label Text="NUESTROS PRECIOS"
                         HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        TextColor="Black"
                        FontSize="18"
                        FontAttributes="Bold"/>

            <BoxView HeightRequest="3" WidthRequest="940"  Color="Black" Margin="10"/>

            <HorizontalStackLayout Spacing="20" Margin="0,25" HorizontalOptions="Center">

                <Frame BackgroundColor="Transparent"
                            BorderColor="Black"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,20">
                    <StackLayout>
                        <Label Text="Platillo por 1 o más de 50 personas: "
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                TextColor="Black"
                                FontSize="18"
                                FontAttributes="Bold"/>

                        <Label Text="$95.00"
                               HorizontalOptions="Center"
                               FontSize="14"
                               Margin="0,10,0,0"/>
                    </StackLayout>
                </Frame>

                    <Frame BackgroundColor="Transparent"
                        BorderColor="Black"
                        CornerRadius="10"
                        Padding="20"
                       Margin="0,20">
                        <StackLayout>
                            <Label Text="Platillo para 200 o más de 300 personas: "
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                TextColor="Black"
                                FontSize="18"
                                FontAttributes="Bold"/>

                            <Label Text="$85.00 o $75.00"
                               HorizontalOptions="Center"
                               FontSize="14"
                               Margin="0,10,0,0"/>
                        </StackLayout>
                    </Frame>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>